{
  "name": "base",
  "version": "0.0.1",
  "description": "base",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production browserify src > ./dist/base.js && uglifyjs ./dist/base.js -cm > ./dist/base.min.js",
    "livereload": "livereloadify ./playground",
    "start": "npm run watch & npm run livereload & npm run static",
    "static": "static ./playground --port 3000 --cache 0",
    "test": "jest",
    "watch": "watchify -o ./playground/playground-compiled.js -v -d playground/playground.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dariocravero/base"
  },
  "keywords": [
    "base"
  ],
  "author": "Dar√≠o Javier Cravero <dario@uxtemple.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dariocravero/base/issues"
  },
  "homepage": "https://github.com/dariocravero/base",
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "defaultParams": true,
      "forOf": true,
      "jsx": true,
      "templateStrings": true
    },
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "globals": {
      "jest": true
    },
    "rules": {
      "eqeqeq": 2,
      "curly": 2,
      "new-cap": false,
      "quotes": [
        2,
        "single"
      ],
      "strict": 0
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "experimental": true
        }
      ],
      "envify"
    ]
  },
  "devDependencies": {
    "babel-jest": "^4.0.0",
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "envify": "^3.3.0",
    "jest-cli": "^0.4.0",
    "livereloadify": "^2.0.0",
    "node-static": "^0.7.6",
    "uglify-js": "^2.4.16",
    "watchify": "^2.4.0"
  },
  "dependencies": {},
  "jest": {
    "scriptPreprocessor": "./node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
